{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "types": [
      "node"
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "./src/test.ts",
    "./src/**/*.spec.ts"
  ]
}
